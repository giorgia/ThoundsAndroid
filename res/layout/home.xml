<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_height="fill_parent"
	android:layout_width="fill_parent">

	<RelativeLayout android:layout_width="fill_parent" android:layout_gravity="center_vertical|center_horizontal|center"
		android:layout_height="50dip" android:background="@drawable/header_logo">
		

		<Button android:text="Logout" android:id="@+id/btnLogout"
			android:background="@layout/shape_blue" android:textColor="@android:color/white"
			android:layout_toLeftOf="@+id/btnReload" android:layout_height="50dip" android:layout_width="60dip" android:visibility="invisible"></Button>


		<ImageButton android:src="@android:drawable/ic_popup_sync"
			android:layout_alignParentRight="true" android:id="@+id/btnReload" android:background="@layout/shape_blue"
			android:layout_centerVertical="true" android:layout_height="50dip" android:layout_width="60dip" android:visibility="invisible"></ImageButton>



	</RelativeLayout>

	<LinearLayout android:id="@+id/LinearLayout01"

		android:layout_width="fill_parent" android:layout_height="fill_parent">
		
		<include android:id="@+id/include01" layout="@layout/thounds_list" android:layout_height="fill_parent" android:layout_width="fill_parent"></include></LinearLayout>
</LinearLayout>
