<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/RelativeLayout03"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:background="@drawable/header_logo" xmlns:android="http://schemas.android.com/apk/res/android">
	<RelativeLayout android:layout_width="fill_parent" android:background="@drawable/header_bg" android:layout_height="50dip" android:id="@+id/headerProfile">

			<TextView android:textStyle="bold" android:layout_height="wrap_content"
			android:layout_marginLeft="5dip"
			android:layout_centerVertical="true" android:maxLines="1"
			android:ellipsize="marquee" android:marqueeRepeatLimit="marquee_forever"
			android:scrollHorizontally="true" android:focusable="true"
			android:selectAllOnFocus="true" android:focusableInTouchMode="true"
			android:shadowDx="1.2" android:shadowDy="1.2"
			android:shadowRadius="1.2" android:textSize="22px"
			android:shadowColor="#0075c1" android:textColor="#ffffff"
			android:layout_width="wrap_content" android:layout_centerInParent="true" android:id="@+id/UserName" android:text="Nome Utente"></TextView>

		

	<Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/btn_logout" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="5dip" android:id="@+id/btn_logout"></Button>
</RelativeLayout><RelativeLayout android:id="@+id/RelativeLayout04" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="50dip"><TabHost android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/tabHost" android:background="#2c302d">



		<TabWidget android:id="@android:id/tabs" android:layout_width="fill_parent" android:layout_height="wrap_content"></TabWidget>
		<FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@android:id/tabcontent">
			<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/tab1" android:orientation="vertical" android:paddingTop="60px">
				<RelativeLayout android:id="@+id/RelativeLayout01" android:background="@drawable/topbar_profile" android:layout_width="fill_parent" android:layout_height="110dip">
					<ImageView android:id="@+id/imgAvatar" android:src="@drawable/no_avatar" android:scaleType="fitXY" android:layout_height="85dip" android:layout_width="85dip" android:background="@android:drawable/picture_frame" android:layout_marginLeft="10dip" android:layout_marginBottom="10dip" android:layout_marginTop="15dip"></ImageView>
					<RelativeLayout android:id="@+id/LinearLayout02" android:layout_toRightOf="@+id/imgAvatar" android:padding="5dip" android:layout_height="100dip" android:layout_width="fill_parent" android:background="@drawable/baloon" android:layout_marginRight="10dip" android:layout_marginTop="5dip">



						<ImageButton android:layout_below="@+id/include02" android:id="@+id/playDefault" android:layout_height="40dip" android:layout_width="40dip" android:layout_alignParentTop="true" android:onClick="onClickButton" android:background="@drawable/play_baloon" android:layout_margin="15dip"></ImageButton>
						<TextView android:layout_toRightOf="@+id/playDefault" android:layout_height="wrap_content" android:layout_below="@+id/txt_def_title" android:id="@+id/txt_def_date" android:text="Created At" android:layout_width="130dip" android:maxLines="1"></TextView>
						<TextView android:layout_toRightOf="@+id/playDefault" android:id="@+id/txt_def_title" android:ellipsize="marquee" android:maxLines="1" android:layout_marginTop="10dip" android:marqueeRepeatLimit="marquee_forever" android:textSize="18dip" android:layout_height="30dip" android:layout_width="130dip" android:text="Default Thounds" android:focusable="true" android:focusableInTouchMode="true" android:textColor="#526691"></TextView>

						<ProgressBar style="?android:attr/progressBarStyleHorizontal" android:id="@+id/ProgressDefault" android:layout_alignParentBottom="true" android:layout_marginBottom="5dip" android:layout_marginTop="5dip" android:layout_height="20dip" android:layout_width="fill_parent" android:layout_marginRight="8dip" android:layout_marginLeft="15dip"></ProgressBar>

					</RelativeLayout>

					<LinearLayout android:layout_toRightOf="@+id/LinearLayout01" android:layout_above="@+id/LinearLayout02" android:layout_height="wrap_content" android:id="@+id/LinearLayout05" android:layout_width="wrap_content"></LinearLayout>


				</RelativeLayout>
				<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/scrollInfo">
					<LinearLayout android:id="@+id/lInfo" android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_below="@+id/lTabs" android:gravity="center_horizontal" android:orientation="vertical" android:background="#2c302d">



						<RelativeLayout android:id="@+id/RelativeLayout02" android:background="@layout/shape" android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_margin="10dip">

							<LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/rowName">
								<TextView android:id="@+id/TextView01" android:text="Name" android:layout_margin="10dip" android:layout_weight="1.0" android:textSize="18dip" android:textColor="#526691" android:layout_height="wrap_content" android:layout_width="90dip"></TextView>
								<TextView android:layout_margin="10dip" android:id="@+id/txtName" android:layout_height="wrap_content" android:layout_width="160dip"></TextView>
							</LinearLayout>

							<LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/div1" android:layout_below="@+id/rowName" android:layout_centerInParent="true">
								<ImageView android:layout_height="wrap_content" android:id="@+id/ImageView01" android:src="@android:drawable/divider_horizontal_bright" android:layout_width="fill_parent"></ImageView>

							</LinearLayout>
							<LinearLayout android:orientation="horizontal" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/rowCountry" android:layout_below="@+id/div1">
								<TextView android:id="@+id/TextView01" android:layout_margin="10dip" android:layout_weight="1.0" android:text="Country" android:textSize="18dip" android:textColor="#526691" android:layout_height="wrap_content" android:layout_width="90dip"></TextView>
								<TextView android:layout_margin="10dip" android:id="@+id/txtCountry" android:layout_height="wrap_content" android:layout_width="160dip"></TextView>
							</LinearLayout>

							<LinearLayout android:orientation="horizontal" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/div2" android:layout_below="@+id/rowCountry" android:layout_centerInParent="true">
								<ImageView android:layout_height="wrap_content" android:id="@+id/ImageView01" android:src="@android:drawable/divider_horizontal_bright" android:layout_width="fill_parent"></ImageView>
							</LinearLayout>
							<LinearLayout android:orientation="horizontal" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/rowSite" android:layout_below="@+id/div2">
								<TextView android:id="@+id/TextView01" android:layout_margin="10dip" android:layout_weight="1.0" android:text="Site" android:textSize="18dip" android:textColor="#526691" android:layout_height="wrap_content" android:layout_width="90dip"></TextView>
								<TextView android:layout_margin="10dip" android:id="@+id/txtSite" android:layout_height="wrap_content" android:text="--" android:ellipsize="marquee" android:maxLines="1" android:layout_width="160dip"></TextView>
							</LinearLayout>

							<LinearLayout android:orientation="horizontal" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/div3" android:layout_below="@+id/rowSite" android:layout_centerInParent="true">
								<ImageView android:layout_height="wrap_content" android:id="@+id/ImageView01" android:src="@android:drawable/divider_horizontal_bright" android:layout_width="fill_parent"></ImageView>

							</LinearLayout>
							<LinearLayout android:orientation="horizontal" android:gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/rowBlog" android:layout_below="@+id/div3">
								<TextView android:id="@+id/TextView01" android:layout_margin="10dip" android:layout_weight="1.0" android:text="Blog" android:textSize="18dip" android:textColor="#526691" android:layout_height="wrap_content" android:layout_width="90dip"></TextView>
								<TextView android:layout_margin="10dip" android:id="@+id/txtBolg" android:layout_height="wrap_content" android:text="--" android:layout_width="160dip"></TextView>
							</LinearLayout>



						</RelativeLayout>
						<TextView android:id="@+id/TextView02" android:layout_height="wrap_content" android:text="Music Info" android:textSize="22dip" android:layout_width="fill_parent" android:layout_margin="10dip" android:textColor="@color/white_smoke"></TextView>
						<LinearLayout android:id="@+id/LinearLayout03" android:layout_height="wrap_content" android:layout_width="fill_parent" android:background="@layout/shape" android:layout_margin="10dip">
							<TextView android:text="Tags" android:id="@+id/TextView03" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="18dip" android:textColor="#526691" android:layout_margin="10dip"></TextView>
							<TextView android:id="@+id/txtTags" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dip" android:text="--"></TextView>
						</LinearLayout>


						<TextView android:id="@+id/TextView02" android:layout_height="wrap_content" android:text="About" android:textSize="22dip" android:layout_width="fill_parent" android:layout_margin="10dip" android:textColor="@color/white_smoke"></TextView>
						<LinearLayout android:id="@+id/LinearLayout04" android:layout_margin="10dip" android:layout_width="fill_parent" android:layout_height="wrap_content" android:background="@layout/shape">
							<TextView android:id="@+id/txtAbout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="10dip" android:text="--"></TextView>
						</LinearLayout>


					</LinearLayout>

				</ScrollView>

		


</LinearLayout>

			<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/tab2" android:orientation="vertical" android:paddingTop="60px">
				<ImageView android:id="@+id/ImageView02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/topbar_contacts_library"></ImageView>
				<LinearLayout android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_below="@+id/lTabs" android:id="@+id/lLibrary">
					<include android:id="@+id/include01" layout="@layout/thounds_list" android:layout_height="fill_parent" android:layout_width="fill_parent"></include>

				</LinearLayout>

			</LinearLayout>

			<LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/tab3" android:orientation="vertical" android:paddingTop="60px">
				<ImageView android:layout_height="wrap_content" android:layout_toRightOf="@+id/LinearLayout02" android:id="@+id/ImageView03" android:layout_width="wrap_content" android:background="@drawable/topbar_contacts_library"></ImageView>
				<LinearLayout android:layout_width="fill_parent" android:layout_below="@+id/lTabs" android:layout_height="fill_parent" android:id="@+id/lContacts">
					<ListView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/contactsListView"></ListView>


				</LinearLayout>

			</LinearLayout>
		</FrameLayout>

	</TabHost></RelativeLayout>
	

</RelativeLayout>
