<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:id="@+id/lContactItem" android:paddingLeft="5dip" android:paddingRight="5dip" android:background="@drawable/thound_item">

	<ImageView android:layout_centerVertical="true" android:id="@+id/imgItemAvatar" android:src="@drawable/no_avatar" android:scaleType="fitXY" android:layout_height="42dip" android:layout_width="42dip" android:padding="1dip" android:background="#878787"></ImageView><LinearLayout android:orientation="vertical"
		android:id="@+id/lContact" android:layout_toRightOf="@+id/imgItemAvatar" android:layout_centerVertical="true" android:padding="10dip" android:layout_width="fill_parent" android:layout_height="wrap_content">

		<TextView android:id="@+id/text1" android:textStyle="bold" android:marqueeRepeatLimit="marquee_forever"
			android:maxLines="1" android:layout_width="fill_parent" android:text="Thounder" android:textColor="#005183" android:textSize="14px" android:ellipsize="end" android:layout_height="wrap_content"/>

		<TextView android:id="@+id/text2" android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:text="Country, City" android:textColor="#535353" android:textStyle="bold" android:ellipsize="end" android:textSize="12px"/>


	
</LinearLayout>

	
	







</RelativeLayout>	