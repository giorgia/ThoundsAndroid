<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:id="@+id/lContactItem" android:paddingLeft="5dip" android:paddingRight="5dip">

	<ImageView android:padding="2dip" android:layout_centerVertical="true" android:id="@+id/imgItemAvatar" android:src="@drawable/no_avatar" android:layout_height="80dip" android:layout_width="80dip" android:scaleType="fitXY"></ImageView><LinearLayout android:orientation="vertical"
		android:layout_height="fill_parent" android:id="@+id/lContact" android:layout_alignParentRight="true" android:layout_width="230dip" android:gravity="center">

		<TextView android:id="@+id/text1" android:textSize="20px"
			android:textStyle="bold" android:marqueeRepeatLimit="marquee_forever"
			android:ellipsize="marquee" android:maxLines="1" android:layout_height="fill_parent" android:layout_marginLeft="5dip" android:layout_width="fill_parent"/>

		<TextView android:id="@+id/text2" android:textSize="14px"
			android:textStyle="italic" android:layout_width="fill_parent"
			android:marqueeRepeatLimit="marquee_forever"
			android:lines="1" android:ellipsize="marquee" android:layout_height="fill_parent"/>


	
</LinearLayout>

	
	







</RelativeLayout>	