<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="fill_parent" android:layout_width="fill_parent" android:background="@drawable/recorder_bg2">

	


	
		


	<TextView android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/txt_countdown" android:soundEffectsEnabled="true" android:gravity="center" android:shadowColor="@android:color/black" android:textColor="@android:color/white" android:visibility="invisible" android:shadowDx="2.2" android:shadowDy="2.2" android:shadowRadius="2.2" android:textSize="200dip"></TextView><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="45dip" android:layout_centerHorizontal="true" android:id="@+id/txt_timer" android:text="00:00:000" android:shadowColor="#FF0000" android:gravity="center" android:textStyle="bold" android:background="@drawable/recorder_screen_bg" android:layout_marginBottom="30dip" android:layout_marginTop="30dip" android:textColor="#E88181" android:shadowRadius="6.0"></TextView><LinearLayout android:layout_width="wrap_content" android:id="@+id/LinearLayout03" android:layout_centerHorizontal="true" android:background="@drawable/recorder_screen_riflesso" android:layout_marginBottom="30dip" android:layout_marginTop="30dip" android:layout_height="55dip"></LinearLayout><ImageView android:id="@+id/ImageView02" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/recorder_separator" android:layout_below="@+id/LinearLayout03"></ImageView><LinearLayout android:layout_width="wrap_content" android:layout_toLeftOf="@+id/DigitalClock01" android:id="@+id/LinearLayout02" android:layout_above="@+id/ImageView02" android:layout_centerHorizontal="true" android:gravity="center" android:orientation="vertical" android:layout_height="150dip">
		
		
		
</LinearLayout>
	
	<RelativeLayout android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:visibility="visible" android:layout_centerInParent="true" android:id="@+id/MetronomeLayout" android:padding="25dip">

		<Spinner android:layout_height="wrap_content"
			android:layout_centerHorizontal="true" android:layout_below="@+id/ImageView01" android:id="@+id/spn_metronome" android:layout_width="290dip" android:layout_marginBottom="10dip"></Spinner>

		<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_below="@+id/spn_metronome" android:layout_alignParentRight="true" android:id="@+id/txtBpm" android:text="0  BPM" android:layout_marginRight="6dip" android:shadowColor="#636363" android:shadowDx="1.2" android:shadowDy="1.2" android:shadowRadius="2.2"></TextView><TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/TextView03"
			android:text="Adjust your tempo:" android:layout_centerHorizontal="true" android:layout_below="@+id/spn_metronome" android:layout_alignParentLeft="true" android:layout_marginLeft="5dip" android:shadowColor="#999999" android:textColor="#cccccc" android:shadowRadius="1" android:shadowDy="-90"></TextView>

		


		
	<LinearLayout android:id="@+id/LinearLayout01" android:layout_below="@+id/TextView03" android:layout_centerHorizontal="true" android:layout_height="wrap_content" android:layout_width="320dip" android:layout_marginTop="10dip"><ImageButton android:id="@+id/btn_minus" android:padding="0dip" android:src="@drawable/minus" android:layout_height="45dip" android:layout_width="135dip"></ImageButton><ImageButton android:id="@+id/btn_plus" android:padding="0dip" android:src="@drawable/plus" android:layout_height="45dip" android:layout_width="135dip"></ImageButton></LinearLayout>

</RelativeLayout><ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/ImageView03" android:background="@drawable/recorder_separator" android:layout_below="@+id/MetronomeLayout"></ImageView>



	
	<LinearLayout android:id="@+id/RecLayout" android:orientation="vertical"
		android:visibility="visible" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:gravity="center" android:layout_marginTop="10dip" android:layout_marginBottom="30dip">

		<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/TextView02"
			android:text="Put your headphones on and press rec " android:shadowDx="0" android:shadowRadius="1.0" android:shadowColor="#999999" android:textColor="#cccccc" android:shadowDy="-1.2"></TextView>
		<ImageButton android:id="@+id/btnRec"
			android:layout_marginTop="10dip" android:background="@drawable/btn_record" android:layout_height="wrap_content" android:layout_width="wrap_content"></ImageButton>
	
</LinearLayout>
	
	<LinearLayout android:layout_height="wrap_content"
		android:id="@+id/MediaLayout" android:layout_width="fill_parent"
		android:layout_y="340dip"
		android:layout_x="50dip" android:layout_alignParentBottom="true" android:layout_marginBottom="30dip" android:gravity="center" android:visibility="invisible">
		<ImageButton android:id="@+id/btnRecAgain"
			android:src="@android:drawable/ic_input_delete" android:layout_height="70dip" android:layout_width="70dip"></ImageButton>
		<ImageButton android:id="@+id/btnPlay"
			android:src="@android:drawable/ic_media_play" android:layout_width="70dip" android:layout_height="70dip"></ImageButton>
		<ImageButton android:id="@+id/btnDelete" android:src="@android:drawable/ic_delete" android:layout_height="70dip" android:layout_width="70dip"></ImageButton>
		<ImageButton android:id="@+id/btnSave" android:src="@android:drawable/ic_input_add" android:layout_width="70dip" android:layout_height="70dip"></ImageButton>
	</LinearLayout>










</RelativeLayout>
