<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:orientation="horizontal" android:focusableInTouchMode="true"
	android:focusable="true" android:clickable="true" android:id="@+id/lThoundItem">

	<RelativeLayout android:id="@+id/RelativeLayout01"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_margin="5dip" android:layout_gravity="center">
		<ImageButton android:src="@android:drawable/ic_media_play"
			android:onClick="onClickButton" android:layout_gravity="center"
			android:id="@+id/btnPlayThound" android:background="@layout/shape_ring"
			android:layout_height="35dip"
			android:layout_width="35dip"></ImageButton>
		<ProgressBar style="?android:attr/progressBarStyleSmall"
			android:id="@+id/pBarThound" android:visibility="invisible" android:background="@layout/shape_ring" android:layout_height="35dip" android:layout_width="35dip"></ProgressBar>
	</RelativeLayout>

	<LinearLayout android:orientation="vertical"
		android:layout_height="fill_parent" android:layout_width="240dip"
		android:onClick="onClickItem" android:id="@+id/lThound">

		<TextView android:id="@+id/text1" android:textSize="20px"
			android:textStyle="bold" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:marqueeRepeatLimit="marquee_forever"
			android:ellipsize="marquee" android:maxLines="1" android:focusable="true"
			android:focusableInTouchMode="true" android:selectAllOnFocus="true" />

		<TextView android:id="@+id/text2" android:textSize="14px"
			android:textStyle="italic" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:marqueeRepeatLimit="marquee_forever"
			android:lines="1" android:ellipsize="marquee" />


	</LinearLayout>

	<TextView android:id="@+id/text2" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textSize="36px"
		android:layout_gravity="center" android:text="â€º" />
	


</LinearLayout>	